{
  "name": "hn-summarizer",
  "version": "0.2.2",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "wrangler dev",
    "publish": "wrangler publish",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:custom": "standard-version --release-as",
    "publish:github": "git push --follow-tags origin main && node -e \"const fs = require('fs'); const changelog = fs.readFileSync('CHANGELOG.md', 'utf8'); const versionMatch = changelog.match(/(#+\\s\\[[0-9]+\\.[0-9]+\\.[0-9]+\\].*?(?=#+\\s\\[[0-9]+|$))/s); const latestRelease = versionMatch ? versionMatch[0] : ''; fs.writeFileSync('LATEST_RELEASE.md', latestRelease);\" && gh release create \"v$(node -p \"require('./package.json').version\")\" --notes-file LATEST_RELEASE.md && rm LATEST_RELEASE.md"
  },
  "keywords": [],
  "author": "ahacad",
  "license": "",
  "type": "commonjs",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250313.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.22.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.6",
    "typescript": "^5.8.2",
    "wrangler": "^4.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "discord.js": "^14.18.0",
    "jsdom": "^26.0.0",
    "node-fetch": "^3.3.2",
    "readability": "^0.1.0",
    "telegraf": "^4.16.3"
  }
}
